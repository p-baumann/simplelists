\ProvidesPackage{simplelists}[simple lists commands inspired by HTML]
\RequirePackage{ifthen}

%
%% define \li as alias for item
\newcommand{\li}{\item}

%
%% unordered lists with prefix u
%% result in itemize environments
\def\uli{%
   \@ifnextchar[ {\@uli}{\@uli[]}}
\def\@uli[#1]{
\begin{itemize}[#1]%
\item{}}

\def\Uli#1\par%
{%
\item{}#1
\end{itemize}}

\newcommand{\ul}[1][]{%
   \ifthenelse{ \equal{#1}{} }
      {\begin{itemize}[] }
      {\begin{itemize}[#1] }
}

\newcommand{\Ul}{\end{itemize}}

%
%% ordered lists with prefix o
%% result in enumerate environments
\def\oli{%
   \@ifnextchar[ {\@oli}{\@oli[]}}
\def\@oli[#1]{
\begin{enumerate}[#1]%
\item{}}

\def\Oli#1\par%
{%
\item{}#1
\end{enumerate}}

\newcommand{\ol}[1][]{%
   \ifthenelse{ \equal{#1}{} }
      {\begin{enumerate}[] }
      {\begin{enumerate}[#1] }
}

\newcommand{\Ol}{\end{enumerate}}

